{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2022",
        "lib": ["DOM"],
        "moduleResolution": "bundler",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": ["lib"],
    "exclude": ["node_modules", "dist"]
}
